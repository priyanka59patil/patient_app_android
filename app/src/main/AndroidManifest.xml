<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.werq.patient">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".PatientApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_icon_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icon_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MedicalInfoActivity"
            android:label="@string/title_activity_medical_info"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activities.ViewVisitNoteActivity"
            android:label="@string/title_activity_view_visit_note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.FilterDoctorList"
            android:label="@string/title_activity_filter_doctor_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ChatInfoActivity"
            android:label="@string/title_activity_chat_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ChatTopicsActivity"
            android:label="@string/title_activity_chat_topics"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ChatRoomActivity"
            android:label="@string/title_activity_chat_room"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.NewChatActivity"
            android:label="@string/title_activity_new_chat"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ProfileDoctorActivity"
            android:label="@string/title_activity_profile_doctor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.SearchByNameActivity"
            android:label="@string/title_activity_search_by_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.AddDoctorTeamActivity"
            android:label="@string/title_activity_add_doctor_team"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ChangePasswordActivity"
            android:label="@string/title_activity_change_password"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_places_api_key" />

        <activity
            android:name=".Activities.ScheduleDetailsActivity"
            android:label="@string/title_activity_schedule_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.FingerPrintActivity"
            android:label="@string/title_activity_finger_print"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.FunctionalActivity" />
        <activity android:name=".Activities.ImmunizationResultsActivity" />
        <activity android:name=".Activities.SummaryCareActivity" />
        <activity android:name=".Activities.ProfileActivity" />
        <activity
            android:name=".Activities.CreateAccountActivity"
            android:label="@string/title_activity_create_account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.VerifyIdentity"
            android:label="@string/title_activity_verify_identity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.BottomTabActivity"
            android:label="@string/title_activity_bottom_tab" />
        <activity
            android:name=".Activities.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>