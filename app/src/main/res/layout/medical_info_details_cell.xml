<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/conMain"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/constraint_layout_padding_insurance"
            android:paddingRight="@dimen/constraint_layout_padding_insurance"
            android:paddingTop="@dimen/constraint_layout_padding_insurance"
            android:layout_marginLeft="@dimen/constraint_layout_margin_left_insurance"
            app:layout_constraintTop_toBottomOf="@+id/conLayoutProvider"
            >

            <TextView
                android:id="@+id/label1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Code"
                android:textColor="@color/titleBadgeTitle"
                android:textSize="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvValue1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/titleBadgeText"
                android:layout_marginTop="@dimen/insurance_text_margin_top"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



       <!-- <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_insurance"
            android:background="@color/contentDividerLine"
            app:layout_constraintTop_toBottomOf="@+id/conLayDetails"/>-->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/constraint_layout_padding_insurance"
            android:paddingRight="@dimen/constraint_layout_padding_insurance"
            android:paddingTop="5dp"
            android:paddingBottom="@dimen/constraint_layout_padding_insurance"
            android:layout_marginLeft="@dimen/constraint_layout_margin_left_insurance"
            app:layout_constraintTop_toBottomOf="@+id/conLayout1">

            <TextView
                android:id="@+id/label2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Site"
                android:textColor="@color/titleBadgeTitle"
                android:textSize="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvValue2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/titleBadgeText"
                android:layout_marginTop="@dimen/insurance_text_margin_top"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/constraint_layout_padding_insurance"
            android:paddingRight="@dimen/constraint_layout_padding_insurance"
            android:paddingTop="5dp"
            android:paddingBottom="@dimen/constraint_layout_padding_insurance"
            android:layout_marginLeft="@dimen/constraint_layout_margin_left_insurance"
            app:layout_constraintTop_toBottomOf="@+id/conLayout2">

            <TextView
                android:id="@+id/label3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Diagnosed"
                android:textColor="@color/titleBadgeTitle"
                android:textSize="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvValue3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/titleBadgeText"
                android:layout_marginTop="@dimen/insurance_text_margin_top"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label3"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/constraint_layout_padding_insurance"
            android:paddingRight="@dimen/constraint_layout_padding_insurance"
            android:paddingTop="5dp"
            android:paddingBottom="@dimen/constraint_layout_padding_insurance"
            android:layout_marginLeft="@dimen/constraint_layout_margin_left_insurance"
            app:layout_constraintTop_toBottomOf="@+id/conLayout3">

            <TextView
                android:id="@+id/label4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/titleBadgeTitle"
                android:textSize="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvValue4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/titleBadgeText"
                android:layout_marginTop="@dimen/insurance_text_margin_top"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label4"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
      <!--  <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_insurance"
            android:background="@color/contentDividerLine"
            app:layout_constraintTop_toBottomOf="@+id/conLayInstruction"/>-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


