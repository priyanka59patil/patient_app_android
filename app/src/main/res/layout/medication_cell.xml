<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/conMain">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conInsuType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/constraint_layout_padding_insurance"
            android:layout_marginLeft="@dimen/constraint_layout_margin_left_insurance"
            app:layout_constraintTop_toBottomOf="@+id/conLayoutProvider">

            <TextView
                android:id="@+id/lblMedication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medication"
                android:layout_marginTop="@dimen/insurance_text_margin_top"
                android:textColor="@color/sub_heding"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="@android:color/holo_green_dark"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/insurance_text_margin_top"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/tvMedication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="medication details"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_text"
                app:layout_constraintTop_toBottomOf="@id/lblMedication"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textAllCaps="false"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="56dp"
                app:layout_constraintTop_toBottomOf="@id/tvMedication" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/guideline">


                <TextView
                    android:id="@+id/lblStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:layout_marginTop="@dimen/insurance_text_margin_top"
                    android:textColor="@color/sub_heding"
                    app:layout_constraintTop_toTopOf="@id/clDate"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31-07-2019"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/color_text"
                    app:layout_constraintTop_toBottomOf="@id/lblStartDate"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textAllCaps="false"/>

                <View
                    android:id="@+id/view"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="@color/contentDividerLine"
                    app:layout_constraintTop_toBottomOf="@+id/clDate"
                    app:layout_constraintBottom_toBottomOf="@id/clDate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                    android:id="@+id/lblEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/insurance_text_margin_top"
                    android:text="End Date"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/sub_heding"
                    app:layout_constraintStart_toStartOf="@id/view"
                    app:layout_constraintTop_toTopOf="@id/clDate" />

                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31-07-2019"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_text"
                    app:layout_constraintTop_toBottomOf="@id/lblEndDate"
                    app:layout_constraintStart_toStartOf="@id/view"
                    android:textAllCaps="false"/>

            </androidx.constraintlayout.widget.ConstraintLayout>




            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/clDate"
                app:layout_constraintGuide_begin="110dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clStrenght"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/guideline2">


                <TextView
                    android:id="@+id/lblStrenght"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strength"
                    android:layout_marginTop="@dimen/insurance_text_margin_top"
                    android:textColor="@color/sub_heding"
                    app:layout_constraintTop_toTopOf="@id/clStrenght"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tvStrenght"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/color_text"
                    app:layout_constraintTop_toBottomOf="@id/lblStrenght"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textAllCaps="false"/>

                <View
                    android:id="@+id/view1"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="@color/contentDividerLine"
                    app:layout_constraintTop_toBottomOf="@+id/clStrenght"
                    app:layout_constraintBottom_toBottomOf="@id/clStrenght"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                    android:id="@+id/lblStrengthUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/insurance_text_margin_top"
                    android:text="Strength Unit"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/sub_heding"
                    app:layout_constraintStart_toStartOf="@id/view1"
                    app:layout_constraintTop_toTopOf="@id/clStrenght" />

                <TextView
                    android:id="@+id/tvStrengthUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="-"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/color_text"
                    app:layout_constraintTop_toBottomOf="@id/lblStrengthUnit"
                    app:layout_constraintStart_toStartOf="@id/view1"
                    android:textAllCaps="false"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conInsuAddr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/constraint_layout_padding_insurance"
            android:layout_marginLeft="@dimen/constraint_layout_margin_left_insurance"
            app:layout_constraintTop_toBottomOf="@+id/conInsuType">

            <TextView
                android:id="@+id/lblInsuranceAddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insurance Plan Name"
                android:textColor="@color/sub_heding"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvInsuranceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/color_text"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/insurance_text_margin_top"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblInsuranceAddr"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_insurance"
            android:background="@color/contentDividerLine"
            app:layout_constraintTop_toBottomOf="@+id/conInsuAddr"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conInsuPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/constraint_layout_padding_insurance"
            android:layout_marginLeft="@dimen/constraint_layout_margin_left_insurance"
            app:layout_constraintTop_toBottomOf="@+id/conInsuAddr">

            <TextView
                android:id="@+id/lblInsurancePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insurance Plan Type"
                android:textColor="@color/sub_heding"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvInsuranceType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/color_text"
                android:layout_marginTop="@dimen/insurance_text_margin_top"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblInsurancePhone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_insurance"
            android:background="@color/contentDividerLine"
            app:layout_constraintTop_toBottomOf="@+id/conInsuPhone"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conInsuName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/constraint_layout_margin_left_insurance"
            android:padding="@dimen/constraint_layout_padding_insurance"
            app:layout_constraintTop_toBottomOf="@+id/conInsuPhone">

            <TextView
                android:id="@+id/lblInsuranceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insurance Id"
                android:textColor="@color/sub_heding"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvMemberNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/color_text"
                android:layout_marginTop="@dimen/insurance_text_margin_top"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblInsuranceName"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--<View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_insurance"
            android:background="@color/contentDividerLine"
            app:layout_constraintTop_toBottomOf="@+id/conInsuName"/>-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


